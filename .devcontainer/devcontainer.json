{
    "name": "ROS 2 Development Container",
    "workspaceFolder": "/ws",
    "dockerComposeFile": "../compose.yml",
    "service": "microros_devenv",
    "postCreateCommand": "echo 'source /ws/install/setup.bash' >> ~/.bashrc",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.flake8",
                "ms-vscode.cmake-tools"
            ]
        }
    }
}